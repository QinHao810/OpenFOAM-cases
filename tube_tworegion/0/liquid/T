FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/liquid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{

    liquid_in
    {
        type            fixedValue;
        value           uniform 300;
    }
    liquid_out
    {
        type            inletOutlet;
        inletValue      uniform 300;
	value 		uniform 300;
    }
    wall_in-shadow
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        Tnbr            T;
        kappaMethod     fluidThermo;
        value           uniform 300;
    }
}


