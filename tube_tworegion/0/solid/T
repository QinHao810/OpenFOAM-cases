FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/solid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 500;

boundaryField
{

    solid_in
    {
        //type            zeroGradient;
        type            fixedValue; //fixedGradient;//zeroGradient;
	value           uniform 500;
    }
    solid_out
    {
        //type            zeroGradient;
        type            fixedValue; //fixedGradient;//zeroGradient;
	value           uniform 500;
    }
    wall_out
    {
        type            fixedValue; //fixedGradient;//zeroGradient;
	value           uniform 500;
    }
    wall_in
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        Tnbr            T;
        kappaMethod     solidThermo;
        value           uniform 500;
    }
}


